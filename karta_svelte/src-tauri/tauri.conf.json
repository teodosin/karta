{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "karta",
  "version": "0.1.0",
  "identifier": "com.karta.dev",
  "build": {
    "frontendDist": "../build",
    "devUrl": "http://localhost:7360",
    "beforeDevCommand": "pnpm dev --port 7360",
    "beforeBuildCommand": "pnpm build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Karta",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "shell": {
      "all": false,
      "execute": true,
      "sidecar": true,
      "open": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
